  \definecolor{ {{~color.name~}} }{RGB}{ {{~rgb.r}}, {{rgb.g}}, {{rgb.b~}} }
{{/with}}
{{/each}}
{{#each colors as |color|}}


 %  {{capitalize color.name}}
 %  ─────────────────────────────────── %

{{#each color.hex as |hex index|}}  
{{#with (hex2rgb hex) as |rgb|}}
  \definecolor{ {{~color.name}}-{{index~}} }{RGB}{ {{~rgb.r}}, {{rgb.g}}, {{rgb.b~}} }
{{/with}}
{{/each}}
